generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  ADMIN
  RESIDENT
}

enum PaymentStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  password      String?
  name          String
  phone         String?
  role          Role      @default(RESIDENT)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // NextAuth
  accounts Account[]
  sessions Session[]

  // Relations
  managedApartments Apartment[] @relation("ApartmentManager")
  unit              Unit?       @relation("UnitResident")
  payments          Payment[]
  invites           Invite[]    @relation("InvitedBy")
  receivedInvites   Invite[]    @relation("InvitedUser")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Apartment {
  id        String   @id @default(cuid())
  name      String
  address   String
  managerId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  manager User   @relation("ApartmentManager", fields: [managerId], references: [id])
  units   Unit[]
  dues    Due[]
}

model Unit {
  id          String   @id @default(cuid())
  apartmentId String
  unitNumber  String
  floor       Int?
  residentId  String?  @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  apartment Apartment @relation(fields: [apartmentId], references: [id], onDelete: Cascade)
  resident  User?     @relation("UnitResident", fields: [residentId], references: [id])
  payments  Payment[]
  invites   Invite[]

  @@unique([apartmentId, unitNumber])
}

model Due {
  id          String   @id @default(cuid())
  apartmentId String
  amount      Float
  month       Int
  year        Int
  dueDate     DateTime
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  apartment Apartment @relation(fields: [apartmentId], references: [id], onDelete: Cascade)
  payments  Payment[]

  @@unique([apartmentId, month, year])
}

model Payment {
  id              String        @id @default(cuid())
  dueId           String
  unitId          String
  residentId      String
  receiptUrl      String?
  receiptKey      String?
  status          PaymentStatus @default(PENDING)
  rejectionReason String?
  uploadedAt      DateTime      @default(now())
  reviewedAt      DateTime?
  updatedAt       DateTime      @updatedAt

  due      Due  @relation(fields: [dueId], references: [id])
  unit     Unit @relation(fields: [unitId], references: [id])
  resident User @relation(fields: [residentId], references: [id])

  @@unique([dueId, unitId])
}

model Invite {
  id          String    @id @default(cuid())
  email       String
  token       String    @unique @default(cuid())
  unitId      String
  invitedById String
  invitedUser String?
  expiresAt   DateTime
  usedAt      DateTime?
  createdAt   DateTime  @default(now())

  unit        Unit  @relation(fields: [unitId], references: [id], onDelete: Cascade)
  invitedBy   User  @relation("InvitedBy", fields: [invitedById], references: [id])
  invitedUserRel User? @relation("InvitedUser", fields: [invitedUser], references: [id])
}
